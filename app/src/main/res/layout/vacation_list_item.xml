<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        android:id="@+id/tv_vacation_list_item_card">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:maxWidth="180dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/tv_vacation_list_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp" />

        <TextView
                android:text="@string/placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/tv_vacation_list_item_date"
                app:layout_constraintBottom_toBottomOf="@+id/tv_vacation_list_item"
                app:layout_constraintEnd_toStartOf="@+id/btn_menu"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@+id/tv_vacation_list_item" />

        <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/menu_icon"
                app:srcCompat="@drawable/baseline_more_horiz_24"
                android:background="@color/white"
                android:id="@+id/btn_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

